{
  "model": {
      "deformation": {
          "compute_similarity_measure_at_low_res": false,
          "map_low_res_factor": 0.5,
          "use_map": true
      },
      "registration_model": {
          "forward_model": {
              "number_of_time_steps": 10,
              "solver": "rk4",
              "adjoin_on": true,
              "rtol": 1e-5,
              "atol": 1e-5,
              "smoother": {
                  "multi_gaussian_stds": [
                      0.05,
                      0.1,
                      0.15,
                      0.2,
                      0.25
                  ],
                  "multi_gaussian_weights": [
                      0.25, 0.25, 0.1, 0.15, 0.25],
                  "type": "multiGaussian"
              },
              "smoother_for_forward": {
                  "type": "multiGaussian"
              }
          },
          "loss": {
              "display_max_displacement": false,
              "limit_displacement": false,
              "max_displacement": 0.05
          },
          "similarity_measure": {
              "develop_mod_on": false,
              "sigma": 1.0,
              "type": "ncc",
              "lncc":{
                  "resol_bound":[128,64],
                  "kernel_size_ratio":[[0.0625,0.125, 0.25], [0.25,0.5], [0.5]],
                  "kernel_weight_ratio":[[0.1, 0.3, 0.6],[0.3,0.7],[1.0]],
                  "stride":[[0.25,0.25,0.25],[0.25,0.25],[0.25]],
                  "dilation":[[2,2,2],[2,2],[1]]
              }
          },
          "load_velocity_from_forward_model":true,
          "spline_order": 1,
          "type": "svf_vector_momentum_map",
          "env":{
              "get_momentum_from_external_network":true,
              "use_odeint":true,
              "reg_factor":1.0
              },
          "shooting_vector_momentum":{
              "use_velocity_mask_on_boundary":false
          }
      }
  },
  "optimizer": {
      "lbfgs": {
          "history_size": 5,
          "line_search_fn": "backtracking",
          "max_eval": 5,
          "max_iter": 1
      },
      "multi_scale": {
          "scale_factors": [
              1.0,
              0.5,
              0.25
          ],
          "scale_iterations": [
              20,
              20,
              20
          ]
      },
      "name": "lbfgs_ls",
      "scheduler": {
          "factor": 0.5,
          "patience": 10,
          "verbose": true
      },
      "single_scale": {
          "nr_of_iterations": 100,
          "rel_ftol": 1e-09
      },
      "use_step_size_scheduler": true
  }
}